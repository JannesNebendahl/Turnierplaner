<Window x:Class="Turnierplaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turnierplaner"
        mc:Ignorable="d"
        Title="Turnierplaner" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Width="510" Margin="0,0,-11,-10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Label Content="Add Mannschaft" Grid.Row="0" Grid.Column="0" FontSize="18" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Content="Name: " Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBox x:Name="tbxMannschaftenName" Grid.Row="1" Grid.Column="1" Width="200" Margin="0,5,5,5"></TextBox>
            <Button x:Name="btnAddMannschaft" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,5,5,5" Click="btnAddMannschaft_Click">Add Mannschaft</Button>
            <Button x:Name="btnRefreshList" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,5,5,5" Click="btnRefreshList_Click">Refresh List</Button>

            <Label Content="List Mannschaften" Grid.Row="0" Grid.Column="2" FontSize="18" HorizontalAlignment="Center"/>
            <ListBox x:Name="lbMannschaften" Grid.Column="2" Grid.Row="1" Grid.RowSpan="4" Width="200" Margin="0,5,0,5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>
