                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Name="chkSpieleFilternMannschaften" Content="{Binding Name}" IsChecked="{Binding Check_Status}" CommandParameter="{Binding Id}"/>
